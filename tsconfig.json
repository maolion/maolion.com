{
  "compileOnSave": false,
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "newLine": "LF"
  },
  "exclude": [
    "**/*.1.ts",
    "**/*.1",
    "**/*.exclude.ts",
    "**/*.exclude"
  ]
}
